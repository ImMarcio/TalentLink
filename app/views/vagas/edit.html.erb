<h1>Editar Vaga</h1>

<%= form_with model: [@vaga.empresa, @vaga], local: true do |form| %>
  <div>
    <%= form.label :titulo %>
    <%= form.text_field :titulo %>
  </div>

  <div>
    <%= form.label :descricao %>
    <%= form.text_area :descricao %>
  </div>

  <div>
    <%= form.label :salario %>
    <%= form.text_field :salario %>
  </div>

  <div>
    <%= form.label :localizacao %>
    <%= form.text_field :localizacao %>
  </div>

  <div>
    <%= form.submit 'Atualizar Vaga' %>
  </div>
<% end %>