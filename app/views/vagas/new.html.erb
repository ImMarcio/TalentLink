 <div class="actions mt-4 abosute z-1 top-6 left-0">
  <%= link_to ' Voltar', request.referrer || empresa_dashboard_path, class: "w-36 text-center  text-black font-bold py-2 px-4 underline" %>
</div>

<div class="flex items-center justify-center min-h-screen pb-56">
  <%= form_with model: [current_empresa, @vaga], local: true, html: { class: "bg-white px-8 pt-6 pb-8 mb-4 w-full " } do |form| %>


    <section class="flex flex-col justify-center items-center bg-white text-black w-full">
      <h2 class="text-4xl font-semibold text-center text-black whitespace-nowrap">Cadastrar Vaga</h2>
      <hr class="border-[#FAB300] my-2 w-[500px] border-t-2">

      <div class="field w-full">
        <%= form.label :titulo, class: "font-medium text-sm" %><br />
        <%= form.text_field :titulo, class: "w-full px-3 py-2 border rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-orange-300" %>
      </div>

      <div class="field w-full">
        <%= form.label :descricao, class: "font-medium text-sm" %><br />
        <%= form.text_area :descricao, class: "w-full px-3 py-2 border rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-orange-300" %>
      </div>

      <div class="field w-full">
        <%= form.label :salario, class: "font-medium text-sm" %><br />
        <%= form.text_field :salario, class: "w-full px-3 py-2 border rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-orange-300" %>
      </div>

      <div class="field w-full">
        <%= form.label :localizacao, class: "font-medium text-sm" %><br />
        <%= form.text_field :localizacao, class: "w-full px-3 py-2 border rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-orange-300" %>
      </div>

      <div class="actions">
        <%= form.submit 'Criar vaga', class: "w-58 text-lg text-center bg-[#FAB300]  text-white font-bold py-2 px-4 mt-2 rounded shadow-xl hover:shadow-2xl" %>
      </div>
    </section>
  <% end %>
</div>


<% if @vaga.errors.any? %>
  <div class="text-red-500 text-sm text-black mb-4">
    <ul>
      <% @vaga.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
