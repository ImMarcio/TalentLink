<div class="flex items-center justify-center min-h-screen pb-56">
  <div class="bg-white px-8 pt-6 pb-8 mb-4 w-full max-w-2xl">

    <!-- Forma preta -->
    <div class="absolute top-0 right-0 w-6/8 h-1/3 bg-black" 
          style="clip-path: polygon(100% 0, 0 0, 100% 100%);">
    </div>

    <!-- Forma amarela -->
    <div class="absolute bottom-0 left-0 w-6/8 h-2/3 bg-yellow-500" 
          style="clip-path: polygon(43% 100%, 0 0, 0 100% );">
    </div>

    <!-- Forma Cinza -->
    <div class="absolute bottom-0 right-0 w-6/8 h-2/3 bg-gray-200" 
          style="clip-path: polygon(100% 43%, 56% 100%, 100% 100%);">
    </div>

    <section class="flex flex-col justify-center items-center bg-white text-black">


      <h1 class="text-4xl font-semibold text-center text-black whitespace-nowrap">Lista de Vagas</h1>
      <hr class="border-[#FAB300] my-2 w-[500px] border-t-2">

      <% if @vagas.any? %>
        <ul class="w-full space-y-4">
          <% @vagas.each do |vaga| %>
            <li class="bg-gray-50 p-4 rounded-lg shadow-md hover:shadow-lg transition-shadow">
              <%= link_to vaga.titulo, vaga_path(vaga), class: "text-lg font-semibold text-[#FAB300] hover:text-orange-700" %>
              <span class="block text-sm text-gray-600">Empresa: <%= vaga.empresa.nome_fantasia %></span>
            </li>
          <% end %>
        </ul>
      <% else %>
        <p class="text-gray-600 text-center">Nenhuma vaga disponÃ­vel no momento.</p>
      <% end %>

      <% if empresa_signed_in? %>
        <div class="mt-6 flex flex-row space-x-4">
             <div class="actions mt-4 ">
       <%= link_to 'Voltar', request.referrer || empresa_dashboard_path, class: "w-36 text-center bg-[#FAB300] hover:bg-orange-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" %>
</div>
          <%= link_to 'Criar Nova Vaga', new_empresa_vaga_path(current_empresa), class: "w-36 text-center bg-[#FAB300] hover:bg-orange-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" %>
        </div>
      <% end %>
    </section>
  </div>
</div>