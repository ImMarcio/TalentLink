    <div class="flex flex-col">
      <h1 class="text-[#FAB300] text-2xl font-bold "> <%= current_candidato.nome %> </h1>
      <p class="font-semibold">Email: <%= current_candidato.email %></p>
      <%= link_to 'Minhas Candidaturas', minhas_candidaturas_path, class: "text-[#FAB300] hover:text-orange-700 font-semibold" %>
    </div>
    

  </div>
