<!-- Exibir as vagas -->
<div class="mt-16 p-4">
  <h2 class="text-2xl font-bold text-[#FAB300]">Vagas Disponíveis</h2>
  
  <div class="space-y-4">
    <% @vagas.each do |vaga| %>
      <div class="border p-4 rounded-lg shadow-md">
        <h3 class="text-xl font-semibold"><%= vaga.titulo %></h3>
        <p><strong>Salário:</strong> <%= vaga.salario %></p>
        <p><strong>Localização:</strong> <%= vaga.localizacao %></p>
        <p><strong>Descrição:</strong> <%= vaga.descricao %></p>
        <div class="flex flex-row space-x-4">
         <%= link_to 'Ver detalhes', vaga_path(vaga), class: "text-[#FAB300] hover:underline font-semibold" %>
         <%= link_to 'Inscreve-se', new_vaga_candidatura_path(vaga), class: "text-red-500 hover:underline font-semibold" %>
         </div>
      </div>
    <% end %>
