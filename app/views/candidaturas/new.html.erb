<div class="flex items-center justify-center ">
  <%= form_with model: @candidatura, url: vaga_candidaturas_path(@vaga), method: :post, 
    html: { class: "bg-white p-16 w-full max-w-4xl shadow-lg rounded-lg" } do |f| %>

    <!-- Forma preta -->
    <div class="absolute top-0 right-0 w-1/3 h-1/4 bg-black" 
          style="clip-path: polygon(100% 0, 0 0, 100% 100%);">
    </div>

    <!-- Forma amarela -->
    <div class="absolute bottom-0 left-0 w-1/3 h-1/3 bg-yellow-500" 
        style="clip-path: polygon(43% 100%, 0 0, 0 100% );">
    </div>

    <!-- Forma Cinza -->
    <div class="absolute bottom-0 right-0 w-1/3 h-1/3 bg-gray-200" 
        style="clip-path: polygon(100% 43%, 56% 100%, 100% 100%);">
    </div>

    <section class="flex flex-col justify-center items-center text-black">
      <h2 class="text-5xl font-semibold text-center">Candidatar-se Ã  Vaga</h2>
      <hr class="border-[#FAB300] my-6 w-3/4 border-t-2">

      <%= f.hidden_field :vaga_id, value: @vaga.id %>
      <%= f.hidden_field :candidato_id, value: current_candidato.id %>

      <div class="field w-full">
        <%= f.label :status, "Status da candidatura", class: "block text-lg font-semibold mb-2" %>
        <%= f.select :status, 
          [['Aprovada', 'aprovada'], ['Em anÃ¡lise', 'em_analise'], ['Reprovada', 'reprovada']], 
          { prompt: "Selecione um status" }, 
          class: "w-full px-4 py-3 border rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-orange-300" %>
      </div>

      <div class="actions mt-8">
        <%= f.submit "Candidatar-se", 
          class: "w-full bg-[#FAB300] hover:bg-orange-700 text-white font-bold py-4 px-8 rounded focus:outline-none focus:shadow-outline text-lg" %>
      </div>
    </section>

  <% end %>
</div>
