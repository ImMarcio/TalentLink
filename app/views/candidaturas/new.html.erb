<div class="flex items-center justify-center ">
  <%= form_with model: @candidatura, url: vaga_candidaturas_path(@vaga), method: :post, 
    html: { class: "bg-white p-16 w-full max-w-4xl shadow-lg rounded-lg" } do |f| %>

     <div class="actions mt-4 abosute z-1 top-6 left-0"> 
       <%= link_to ' ← Voltar', request.referrer || empresa_dashboard_path, class: "w-36 text-center  text-black font-medium py-2 px-4 underline" %>
     </div>

    <section class="flex flex-col justify-center items-center text-black">
      <h2 class="text-5xl font-semibold text-center">Candidatar-se à Vaga</h2>
      <hr class="border-[#FAB300] my-6 w-3/4 border-t-2">

      <%= f.hidden_field :vaga_id, value: @vaga.id %>
      <%= f.hidden_field :candidato_id, value: current_candidato.id %>
        <div class="field my-2">
          <p><strong class="text-lg">Candidato:</strong> <span class="text-black font-semibold"><%= current_candidato.nome %></span></p>
      </div>

      <div class="field my-2">
        <p><strong class="text-lg">Vaga:</strong> <span class="text-black font-semibold"><%= @vaga.titulo %></span></p>
      </div>
     
      <div class="actions mt-8">
        <%= f.submit "Candidatar-se", 
          class: "w-full bg-[#FAB300] hover:bg-orange-700 text-white font-bold py-2 px-14 rounded-lg focus:outline-none focus:shadow-outline text-lg" %>
      </div>
    </section>

  <% end %>
</div>
