 <div class="actions mt-4 abosute z-1 top-6 left-0">
  <%= link_to '← Voltar', candidato_dashboard_path, class: "w-36 text-center  text-black font-bold py-2 px-4 underline" %>
</div>

<section class="flex flex-col justify-center items-center bg-white text-black p-6">
  <h1 class="text-4xl font-semibold text-center text-black mb-6">Minhas Candidaturas</h1>
  <hr class="border-[#FAB300] my-2 w-[500px] border-t-2 mb-6">

  <!-- Tabela estilizada -->
  <div class="w-full overflow-x-auto">
    <table class="w-full table-auto bg-white shadow-lg rounded-lg border border-gray-200">
      <thead>
        <tr class="bg-[#FAB300] text-white">
          <th class="py-3 px-6 text-left">Candidato</th>
          <th class="py-3 px-6 text-left">Vaga</th>
          <th class="py-3 px-6 text-left">Status</th>
          <th class="py-3 px-6 text-left">Ação</th>
        </tr>
      </thead>
      <tbody>
        <% @candidaturas.each do |candidatura| %>
          <tr class="text-gray-700 border-b hover:bg-gray-100 transition duration-200">
            <td class="py-4 px-6 font-medium"><%= candidatura.candidato.nome %></td>
            <td class="py-4 px-6"><%= candidatura.vaga.titulo %></td>
             <td class="py-4 px-6 text-center">
              <span class="px-3 py-1 rounded-full text-white text-sm font-semibold 
                          <%= candidatura.status == 'Em analise' ? 'bg-blue-500' : 
                              (candidatura.status == 'aprovada' ? 'bg-green-500' : 
                              (candidatura.status == 'reprovada' ? 'bg-red-500' : '')) %> 
                          capitalize">
                <%= candidatura.status.humanize %>
              </span>
            </td>
            <td class="py-4 px-6 text-center">
              <%= link_to 'Ver detalhes', candidatura_path(candidatura), class: "text-[#FAB300] hover:text-orange-700 font-semibold transition duration-200" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>


</section>
