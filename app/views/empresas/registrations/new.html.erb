<h2>Cadastro de Empresa</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "empresas/shared/error_messages", resource: resource %>

  <div>
  Aqui o texto
  </div>

 <div class="field">
    <%= f.label :nome_fantasia %><br />
    <%= f.text_field :nome_fantasia, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :razao_social %><br />
    <%= f.text_field :razao_social %>
  </div>

  <div class="field">
    <%= f.label :cnpj %><br />
    <%= f.text_field :cnpj %>
  </div>

  <div class="field">
    <%= f.label :telefone %><br />
    <%= f.text_field :telefone %>
  </div>

  <div class="field">
    <%= f.label :setor %><br />
    <%= f.text_field :setor %>
  </div>


  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "Cadastrar" %>
  </div>
<% end %>

<%= render "empresas/shared/links" %>
