<div class="flex flex-col content-center items-center justify-center ">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name),
   html: { method: :put, class: "bg-white px-8 pt-6 pb-8 mb-4 w-full max-w-md shadow-md rounded-lg" }) do |f| %>

    <!-- Forma preta -->
    <div class="absolute top-0 right-0 w-6/8 h-1/3 bg-black z-[-1]" 
          style="clip-path: polygon(100% 0, 0 0, 100% 100%);">
    </div>

    <!-- Forma amarela -->
    <div class="absolute bottom-0 left-0 w-6/8 h-2/3 bg-yellow-500 z-[-1]" 
          style="clip-path: polygon(43% 100%, 0 0, 0 100%);">
    </div>

    <!-- Forma Cinza -->
    <div class="absolute bottom-0 right-0 w-6/8 h-2/3 bg-gray-200 z-[-1]" 
          style="clip-path: polygon(100% 43%, 56% 100%, 100% 100%);">
    </div>

    <section class="flex flex-col justify-center items-center bg-white text-black">
      <h2 class="text-4xl font-semibold text-center text-black whitespace-nowrap mb-6">Editar <%= resource_name.to_s.humanize %></h2>
      <hr class="border-[#FAB300] my-2 w-[450px] border-t-2">

      <div class="field mb-4">
        <%= f.label :nome_fantasia, class: "font-semibold text-sm" %><br />
        <%= f.text_field :nome_fantasia, class: "w-full px-3 py-2 border rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-orange-300" %>
      </div>

      <div class="field mb-4">
        <%= f.label :razao_social, class: "font-semibold text-sm" %><br />
        <%= f.text_field :razao_social, class: "w-full px-3 py-2 border rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-orange-300" %>
      </div>

      <div class="field mb-4">
        <%= f.label :cnpj, class: "font-semibold text-sm" %><br />
        <%= f.text_field :cnpj, class: "w-full px-3 py-2 border rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-orange-300" %>
      </div>

      <div class="field mb-4">
        <%= f.label :telefone, class: "font-semibold text-sm" %><br />
        <%= f.text_field :telefone, class: "w-full px-3 py-2 border rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-orange-300" %>
      </div>

      <div class="field mb-4">
        <%= f.label :setor, class: "font-semibold text-sm" %><br />
        <%= f.text_field :setor, class: "w-full px-3 py-2 border rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-orange-300" %>
      </div>

      <div class="field mb-4">
        <%= f.label :email, class: "font-semibold text-sm" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full px-3 py-2 border rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-orange-300" %>
      </div>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div class="mb-4 text-sm text-gray-500">
          Currently waiting confirmation for: <%= resource.unconfirmed_email %>
        </div>
      <% end %>

      <div class="field mb-4">
        <%= f.label :password, class: "font-semibold text-sm" %> <i>(leave blank if you don't want to change it)</i><br />
        <%= f.password_field :password, autocomplete: "new-password", class: "w-full px-3 py-2 border rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-orange-300" %>
        <% if @minimum_password_length %>
          <br />
          <em><%= @minimum_password_length %> characters minimum</em>
        <% end %>
      </div>

      <div class="field mb-4">
        <%= f.label :password_confirmation, class: "font-semibold text-sm" %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "w-full px-3 py-2 border rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-orange-300" %>
      </div>

      <div class="field mb-4">
        <%= f.label :current_password, class: "font-semibold text-sm" %> <i>(we need your current password to confirm your changes)</i><br />
        <%= f.password_field :current_password, autocomplete: "current-password", class: "w-full px-3 py-2 border rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-orange-300" %>
      </div>

      <div class="actions mb-6">
        <%= f.submit "Atualizar", class: "w-full bg-[#FAB300] hover:bg-orange-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" %>
      </div>
    </section>
  <% end %>

  <div class="text-center flex flex-col ml-10">
       <h3 class="text-xl font-bold mt-4">Cancelar minha conta</h3>
        <div class="text-sm text-gray-600">Insatisfeito? <%= button_to "Cancelar minha conta", registration_path(resource_name), data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, method: :delete, class: "text-red-500 hover:text-red-700" %></div>

  </div>

  <div class="text-center mt-4">
    <%= link_to "Voltar", :back, class: "text-blue-500 hover:text-blue-700" %>
  </div>
</div>
